<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<body>
<div class="container">
<h1>List of the links</h1>

  <hr>
  <% @links.each do |link| %>
    <p><h4><a href="<%= link.url %>">
    <%= link.description.capitalize %> </a></h4></p>
    <p><%= link_to 'Show', link %> | <%= link_to 'Edit', edit_link_path(link) %> | <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <hr>
    <% end %>

<br>


<br>

<%= link_to 'New Link', new_link_path %>

</body>